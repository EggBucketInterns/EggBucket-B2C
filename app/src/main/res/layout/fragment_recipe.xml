                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ðŸ› Egg Curry -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Title with white background -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:letterSpacing="-0.001"
                        android:text=" ðŸ³ Egg Curry"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold|italic"
                        android:padding="4dp" />

                    <!-- Grey box for content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#CCAAAAAA"
                        android:padding="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ingredients: Boiled eggs, onion, tomato, garlic, spices (turmeric, chili, garam masala), oil\n\nSteps:\nâ€¢ Boil 2â€“3 eggs, peel them, and lightly fry in oil with turmeric.\nâ€¢ In a pan, heat oil and sautÃ© chopped onion and garlic until golden.\nâ€¢ Add chopped tomato and spices; cook until soft.\nâ€¢ Add water to make curry and bring it to a boil.\nâ€¢ Add fried eggs, simmer for 5 minutes, and serve with rice or roti."
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
